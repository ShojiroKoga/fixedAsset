<% if logged_in? %>

  <h3>以下の内容で、送信する。</h3>
  
  <%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= form.hidden_field :image %>
    <%= hidden_field_tag :"cache[image]",@blog.image.cache_name %>

  
    <p>タイトル:<%= @blog.title %></p>
    <p>本文:<%= @blog.content %></p>
    <%= image_tag(@blog.image.url) %>
    <p>画像:<%= @blog.image %></p>

    <%= form.submit  "登録する" %>
  <% end %>
  
  <%= form_with(model: @blog, url: new_blog_path, method: 'get') do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= form.hidden_field :image %>

    <%= form.submit "もどる", name: 'back' %>
  <% end %>
  
<% else %>
    <h2>session error, please login</h2>  
<% end %>